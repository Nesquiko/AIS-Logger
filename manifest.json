{
    "name": "AISLogger",
    "description": "Extension for automatic logging into STU AIS system.",
    "version": "2.1",
    "manifest_version": 2,
    "permissions": ["storage"],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://is.stuba.sk/auth/*"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "AIS Logger",
        "default_icon": "icon48.png"
    }
}
